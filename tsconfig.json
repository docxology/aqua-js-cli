{
    "include": [
        "*.ts"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16", // Changed from ESNext to CommonJS to node16
        "moduleResolution": "node16", // Changed from bundler to node to node16
        "outDir": "dist", // Uncommented to specify output directory
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}