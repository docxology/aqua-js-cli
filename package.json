{
  "name": "data-accounting-external-verifier",
  "version": "1.0.9",
  "description": "JS Client for external verifier.  Goal: A shared library supports a commandline execution and a chrome-extension which is implementation independent. So the verify.js will support not only the mediawiki integration but potentially other third party integrations of the verification procedure.",
  "main": "index.js",
  "types": "index.d.ts",
  "type": "module",
  "dependencies": {
    "aqua-js-sdk": "^3.2.1-1",
    "ethers": "^6.13.5",
    "http-status-codes": "^2.2.0",
    "minimist": "^1.2.8",
    "tsup": "^8.4.0"
  },
  "bin": {
    "aqua": "./aqua.js"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "scripts": "./dist/aqua.cjs",
    "assets": [
      "node_modules/aqua-js-sdk/**/*",
      "node_modules/dids/**/*",
      "node_modules/key-did-provider-ed25519/**/*",
      "node_modules/key-did-resolver/**/*",
      "node_modules/open/**/*",
      "node_modules/dag-jose-utils/**/*"
    ]
  },
  "scripts": {
    "dev": "tsup",
    "build": "tsc",
    "local": "npm link aqua-js-sdk && tsc",

    "build-bundle": "tsup --format cjs --dts --no-splitting --target=node16",
    "pkg-debug": "pkg ./dist/aqua.cjs -d --targets node16-linux-x64,node16-macos-x64,node16-win-x64 --output dist/aqua-debug",
    "build-executables-fix": "npm run build-bundle && npm run pkg-debug && pkg ./dist/aqua.cjs --targets node16-linux-x64,node16-macos-x64,node16-win-x64 --output dist/aqua",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inblockio/data-accounting-external-verifier.git"
  },
  "author": "",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/inblockio/data-accounting-external-verifier/issues"
  },
  "homepage": "https://github.com/inblockio/data-accounting-external-verifier#readme",
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "pkg": "^5.8.1",
    "prettier": "^3.3.3",
    "typescript": "5.1.6"
  },
  "optionalDependencies": {
    "asn1js": "^3.0.5",
    "nostr-tools": "^2.7.2",
    "open": "^10.1.0",
    "openid-client": "^5.7.0",
    "pkijs": "^3.2.4",
    "sigstore": "^3.0.0"
  },
  "files": [
    "checkEtherScan.js",
    "formatter.js",
    "index.js",
    "index.d.ts",
    "LICENSE",
    "package.json",
    "README.md"
  ]
}